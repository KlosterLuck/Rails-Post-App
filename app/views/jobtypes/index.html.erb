<h1>Listing all jobtypes</h1>

<% @jobtypes.each do |jobtype| %>
	<ul>
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li>
					<%= link_to "#{jobtype.name}", jobtype_path(jobtype) %>
				</li>
				<li>
					<small><%= pluralize(jobtype.posts.count, "post") %></small>
				</li>
			</div>
		</div>
	</ul>

<% end %> 